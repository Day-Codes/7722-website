<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FRC Team Events</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>FRC Team Events</h1>
        <table class="events-table">
            <thead>
                <tr>
                    <th>Event Name</th>
                    <th>Date</th>
                    <th>Location</th>
                </tr>
            </thead>
            <tbody class="events-table-body">
            </tbody>
        </table>
    </div>

    <script>
        const teamNumber = window.location.pathname.split('/')[2];
        fetch(`/events/7722`)
        .then(response => response.json())
        .then(events => {
            const eventsTableBody = document.querySelector('.events-table-body');
            events.forEach(event => {
                const eventRow = document.createElement('tr');
                eventRow.innerHTML = `
                    <td>${event.name}</td>
                    <td>${event.date}</td>
                    <td>${event.location}</td>
                `;
                eventsTableBody.appendChild(eventRow);
            });
        })
        .catch(error => console.error('Error fetching data:', error));
    </script>
</body>
</html>
